  <%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :post_title %>
      <%= f.text_field :post_title, class: "form-control", placeholder: "#{@post.post_title}" %>
    </div>
    <div class="form-group">
      <%= f.label :post_content %>
      <%= f.text_area :post_content, class:"form-control", rows:"3", placeholder: "#{@post.post_content}" %>
    </div>
    <%= f.submit "Update this post", class: "btn btn-default" %>
    <%= link_to "Cancel", @post %>
  <% end %>