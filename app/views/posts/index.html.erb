<% provide(:title, "Test blog by Mikle Viter #{params[:page] ? " - page "+params[:page] : ""}") %>

<% if @posts.any? %>
  <% if params[:query] %>
    <h1>Results for search "<%= params[:query] %>"</h1>
  <% else %>
    <h1>Here are posts, generated by Faker</h1>
  <% end %>
  <%= render 'btn_create_post' %>
  <div class="margin-top-10">
    <%= page_entries_info @posts %>
  </div>
  <div>
    <%= render 'pagination' %>
  </div>
  <%= render @posts %>
  <div>
    <%= render 'pagination' %>
  </div>
<% else %>
  <h1>Click link below to create your first post</h1>
<% end %>

<%= render 'btn_create_post' %>