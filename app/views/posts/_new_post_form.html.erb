  <%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :post_title %>
      <%= f.text_field :post_title, class: "form-control", placeholder: "Put a title here..." %>
    </div>
    <div class="form-group">
      <%= f.label :post_content %>
      <%= f.text_area :post_content, class:"form-control", rows:"3", placeholder: "Compose new post..." %>
    </div>
    <%= f.submit "Create new post", class: "btn btn-default" %>
  <% end %>